{
    "extends": "../tsconfig_base.jsonc",
    "include": ["**/*.ts", "**/*.vue"],
    "exclude": ["**/node_modules"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "baseUrl": ".",
        "paths": {"@/*": ["src/*"]},
        "types": ["vite/client", "vite-svg-loader"],
    },
    "vueCompilerOptions": {
        "plugins": [
            "@vue/language-plugin-pug"
        ]
    }
}
